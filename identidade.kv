Manager:
    Menu:
        name: 'menu'
    Game:
        name: 'game'
    GameOver:
        name: 'game_over'

<Menu>:
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: 'Identidade'
            halign: 'center'
            size_hint_y: 3
            font_style: 'H2'
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDRectangleFlatButton:
                text: 'Come√ßar'
                on_release: app.root.current = 'game'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDRectangleFlatButton:
                text: 'Sair'
                on_release: app.stop()

<Player>:
    source: 'ball.png'

<Game>:
    MDFloatLayout:
        Player:
            id: player
            allow_stretch: True
            size_hint: None, None
            size: root.height / 15, root.height / 15
            x: root.width * 0.9
            y: root.height / 20

<GameOver>:
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: 'Fim de Jogo'
            halign: 'center'
            font_style: 'H2'
            theme_text_color: "Custom"
            text_color: app.theme_cls.accent_color
            size_hint_y: 3
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDRectangleFlatButton:
                text: 'Tentar de novo'
                on_release: app.root.current = 'game'
                text_color: app.theme_cls.accent_color
                line_color: app.theme_cls.accent_color
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDRectangleFlatButton:
                text: 'Sair'
                on_release: app.stop()
                text_color: app.theme_cls.accent_color
                line_color: app.theme_cls.accent_color

<Obstacle>
    canvas:
        Color:
            rgba: app.theme_cls.accent_color
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint: None, None
    height: '50dp'
